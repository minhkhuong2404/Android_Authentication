<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/text_field"
    android:padding="5dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:cardCornerRadius="10dp"
            android:shape="ring">
            <ImageView
                android:id="@+id/course_image_explorer"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/course_name_explorer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:fontFamily="@font/pt_sans_bold"/>
            <TextView
                android:id="@+id/rate_explorer"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="0dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_baseline_star_12"
                android:textSize="11dp"
                android:fontFamily="@font/pt_sans_regular"
                android:textColor="@color/white"
                android:background="@drawable/text_field"
                android:backgroundTint="#6DDFBA"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/after_sale_price_explorer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_400"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textSize="18sp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/before_sale_price_explorer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pt_sans_bold"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/button_add_explorer"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:text="Add"
                    android:textSize="11sp"
                    android:paddingVertical="0dp"
                    android:paddingHorizontal="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/add_button"
                    android:fontFamily="@font/pt_sans_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>