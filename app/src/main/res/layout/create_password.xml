<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreatePassword"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn_create_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baseline_arrow_back_ios_new_black_24dp"
        android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Create Password"
            android:textSize="22sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/enter_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="Your password must have at least 8 or more characters"
            android:layout_marginStart="15dp" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/enter_password_field"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:background="@drawable/text_field"
            android:inputType="textPassword"
            android:fontFamily="@font/pt_sans_regular"
            android:textColor="@color/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingHorizontal="100dp"
                android:indeterminate="false"
                android:maxHeight="20dip"
                android:minHeight="20dip"
                android:layout_weight="1"
                android:progress="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="Weak"
                android:id="@+id/password_strength" />
        </LinearLayout>

        <TextView
            android:id="@+id/already_have_account_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Already have an account?" />

        <TextView
            android:id="@+id/sign_in_if_exists_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/orange_400"
            android:textStyle="bold"
            android:background="@drawable/selector"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/create_password_continue_btn"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/continue_btn">

        </Button>
    </LinearLayout>

</RelativeLayout>