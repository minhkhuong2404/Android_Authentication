<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".CourseView"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn_course_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baseline_arrow_back_ios_new_black_24dp"
        android:layout_marginStart="15dp" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <androidx.cardview.widget.CardView
            android:layout_height="180dp"
            android:layout_width="280dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_centerInParent="true"
            android:shape="ring">
        <ImageView
            android:id="@+id/course_view_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/text_field"
            android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <TextView
        android:id="@+id/course_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sketch"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="22sp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/pt_sans_bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/course_view_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Design"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before sale price: $ "
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/course_view_before_sale_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="240"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After sale price: $ "
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/course_view_after_sale_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate: "
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/course_view_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.5"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 100"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:fontFamily="@font/pt_sans_bold"/>
    </LinearLayout>
</LinearLayout>